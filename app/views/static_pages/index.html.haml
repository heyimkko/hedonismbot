.container
  .wrapper
    .heading
      %h1#header HedonismBot
      %h2#subheader Track the shows you're currently watching, allowing you to see at-a-glance when the next episode or season will air. No more Wikipedia/IMDB digging!
      #flash
        -flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_notice"
      #query
        = form_tag(trackings_path, method: :post) do
          = text_field_tag "show_title", "", { placeholder: "Try now: enter a show title, e.g. \"Game of Thrones\"", autofocus: true }
          = submit_tag "+"
    #mid_wrapper
      #mid_links
        - if current_user.nil? || current_user.guest?
          %li= link_to "Signup", '#', {class: 'signup_link'}
          %li= link_to "Login", '#', {id: 'login_link'}
        - else
          %li= link_to "Logout", logout_path
        %li= link_to "About", '#', {id: 'about_link'}
      #popin
        #signup
          = render partial: "partials/signup" 
        #login
          = render partial: "partials/login" 
        #about
          = render partial: "partials/about" 
  .content
    #shows
      - if @shows.empty?
        %h2 Sample cards:
        = render partial: "shows/show", collection: @demo_shows  
      - else
        %h2 Your Tracked Shows:
        %p#logged_in_as
          = "Logged in as #{current_user.name}."
          - if current_user.guest?
            = link_to "Sign up", '#', {id: 'scroll_to_signup', class: 'signup_link'}
            = "to save your shows."
        = render @shows
  .footer